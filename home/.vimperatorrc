" Addon: Tab Kit
set! extensions.tabkit.customCloseOrder=0
set! extensions.tabkit.emphasizeCurrentTab=true
set! extensions.tabkit.firstRunWizardDone=true
set! extensions.tabkit.gestures.tabWheelTabSwitch=false
set! extensions.tabkit.tabSidebarWidth=60
set! extensions.tabkit.tabbarPosition=1
